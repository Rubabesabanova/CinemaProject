
@model  MovieProject.Models.User

@{
    ViewBag.Title = "Register Now";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<form action="@Url.Action("Register", "Auth")" class="p-4 text-white" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="name"><i class="fas fa-user"></i> Name</label>
        <input type="text" class="form-control" name="Name">

        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label for="surname"><i class="fas fa-user"></i> Surname</label>
        <input type="text" class="form-control" name="Surname">

        @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label for="email"><i class="fas fa-envelope"></i> Email</label>
        <input type="email" class="form-control" name="Email">
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label for="pwd"><i class="fas fa-lock"></i> Password</label>
        <input type="password" class="form-control" id="pwd" name="Password">
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
    </div>
    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" type="checkbox"> Remember me
        </label>
    </div>
    <button type="submit" class="btn btn-warning mb-3 mt-3 float-right">Register</button>
</form>
